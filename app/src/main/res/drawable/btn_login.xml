<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true" android:state_enabled="true">
        <shape android:layout_width="match_parent" android:layout_height="match_parent">
            <solid android:color="@android:color/darker_gray" />
            <stroke android:width="1dp" android:color="@color/divider_list" />
            <corners android:radius="40dp" />
        </shape>
    </item>
    <item android:state_pressed="false" android:state_enabled="true">
        <shape android:layout_width="match_parent" android:layout_height="match_parent">
            <gradient android:startColor="#FF520D" android:centerColor="#F8451C" android:endColor="#FF2C3F" android:angle="45" />
            <corners android:radius="40dp" />
        </shape>
    </item>
    <item android:state_pressed="false" android:state_enabled="false">
        <shape android:layout_width="match_parent" android:layout_height="match_parent">
            <solid android:color="@color/grey_bg" />
            <stroke android:width="1dp" android:color="@color/divider_list" />
            <corners android:radius="40dp" />
        </shape>
    </item>
</selector>