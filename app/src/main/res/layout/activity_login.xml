<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:paddingLeft="45dp"
        android:paddingRight="45dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/btn_picture" />


        <com.zhongdi.miluo.widget.ClearEditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="60dp"
            android:background="@drawable/et_input_bg"
            android:drawablePadding="10dp"

            android:hint="输入手机号"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:nextFocusForward="@+id/et_password"
            android:padding="13dp"
            android:textColorHint="@color/sub_text_color"
            android:textSize="14sp" />

        <com.zhongdi.miluo.widget.ClearEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_username"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_input_bg"
            android:drawablePadding="10dp"
            android:hint="输入密码"
            android:imeActionId="@+id/login"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="13dp"
            android:textSize="14sp" />


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/et_password"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_register"
            android:gravity="center"
            android:text="登录"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/btn_login"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_register"
            android:gravity="center"
            android:text="注册"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_forget_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_register"
            android:layout_below="@+id/btn_register"
            android:layout_marginTop="10dp"
            android:text="忘记密码?"
            android:textColor="@color/sub_text_color" />

        <TextView
            android:id="@+id/tv_visitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/btn_register"
            android:layout_below="@+id/btn_register"
            android:layout_marginTop="10dp"
            android:text="游客模式"
            android:textColor="@color/sub_text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_forget_psw"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:text="版权所有"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>
