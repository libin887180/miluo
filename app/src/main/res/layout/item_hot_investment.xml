<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="15dp"
    android:background="@color/white"
    android:paddingBottom="15dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/iv_type"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/bg_circle_blue"
        android:text="人工智能"
        android:gravity="center"
        android:textSize="18sp"
        android:background="@drawable/bg_dashgap_circle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dp">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刷卡机倒骄傲"
            android:textColor="@color/text_222"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_dsc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="10dp"
            android:text="2017-06-05 14:32"
            android:textColor="@color/text_color_normal"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:drawablePadding="10dp"
            android:text="新增潜力"
            android:drawableRight="@drawable/icon_right"
            android:textColor="@color/text_color_normal"
            android:textSize="16sp" />
    </RelativeLayout>


</LinearLayout>