<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_find_psw"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:src="@drawable/nav_icon_back"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:text=""
            android:textSize="14sp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="@color/text_color_normal"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_title_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tv_title_right"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:text="保存"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_list" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_below="@+id/imageView"
                android:layout_weight="5"
                android:background="@drawable/et_input_bg"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/img_username"
                android:drawablePadding="10dp"
                android:hint="输入手机号码"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1"
                android:nextFocusForward="@+id/et_password"
                android:padding="13dp"
                android:textColorHint="@color/text_color_normal"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_send_yzm"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="3"
                android:background="@drawable/btn_yzm"
                android:text="发送验证码"
                android:textColor="@color/white" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_input_bg"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_yzm"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_below="@+id/imageView"
                android:layout_weight="5"
                android:background="@null"
                android:drawableLeft="@drawable/login_psw"
                android:drawablePadding="10dp"
                android:hint="输入验证码"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:nextFocusForward="@+id/et_password"
                android:padding="13dp"
                android:textColorHint="@color/text_color_normal"
                android:textSize="14sp" />
        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/pwdLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            >

            <EditText
                android:id="@+id/et_psw"
                android:background="@drawable/et_input_bg"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/imageView"
                android:drawableLeft="@drawable/login_psw"
                android:drawablePadding="10dp"
                android:hint="输入密码"
                android:maxLines="1"
                android:inputType="textPassword"
                android:padding="13dp"
                android:textColorHint="@color/text_color_normal"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/et_password"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_register"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/text_color_normal" />
    </LinearLayout>
</LinearLayout>
