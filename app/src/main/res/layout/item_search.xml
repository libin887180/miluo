<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp">


    <TextView
        android:id="@+id/tv_fund_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="刷卡机倒垃圾大路口的骄傲"
        android:textColor="@color/text_222"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_increase_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_fund_name"
        android:text="4.35%"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_fund_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_fund_name"
        android:text="00263"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_color_normal"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_fund_code"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_fund_code"
        android:background="@drawable/btn_with_border"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="指数型"
        android:textColor="@color/red"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/tv_increase_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_fund_name"
        android:text="日涨幅"
        android:layout_marginTop="10dp"
        android:layout_alignBottom="@id/tv_fund_code"
        android:textColor="@color/text_color_normal"
        android:textSize="16sp" />
</RelativeLayout>

