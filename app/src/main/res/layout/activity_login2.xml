<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="85px"
        android:paddingRight="85px">

        <ImageView
            android:id="@+id/imageView"
            android:layout_marginTop="150px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/btn_picture" />


        <com.zhongdi.miluo.view.ClearEditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="120px"
            android:drawablePadding="20px"
            android:hint="输入手机号"
            android:background="@drawable/et_input_bg"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:nextFocusForward="@+id/et_password"
            android:padding="26px"
            android:textColorHint="@color/sub_text_color"
            android:textSize="28px" />

        <com.zhongdi.miluo.view.ClearEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_username"
            android:layout_marginTop="30px"
            android:drawablePadding="20px"
            android:background="@drawable/et_input_bg"
            android:hint="输入密码"
            android:imeActionId="@+id/login"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="26px"
            android:textSize="28px" />


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_below="@+id/et_password"
            android:layout_marginTop="40px"
            android:background="@drawable/btn_register"
            android:gravity="center"
            android:text="登录"
            android:textSize="28px"
            android:textColor="@android:color/black" />
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_below="@+id/btn_login"
            android:layout_marginTop="20px"
            android:background="@drawable/btn_register"
            android:gravity="center"
            android:text="注册"
            android:textSize="28px"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_forget_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_register"
            android:layout_below="@+id/btn_register"
            android:layout_marginTop="20px"
            android:text="忘记密码?"
            android:textColor="@color/sub_text_color" />

        <TextView
            android:id="@+id/tv_visitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/btn_register"
            android:layout_below="@+id/btn_register"
            android:layout_marginTop="20px"
            android:text="游客模式"
            android:textColor="@color/sub_text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_forget_psw"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60px"
            android:layout_marginTop="60px"
            android:text="版权所有"
            android:visibility="gone" />

    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
