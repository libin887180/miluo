<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MutiProgress">
        <attr name="nodesNum" format="integer" /> <!-- 节点数量 -->
        <attr name="nodeRadius" format="dimension" />
        <attr name="progressingDrawable" format="reference"></attr>
        <attr name="unprogressingDrawable" format="reference" />  <!-- 未完成的节点图标 -->
        <attr name="progresFailDrawable" format="reference" />
        <attr name="progresSuccDrawable" format="reference" />

        <attr name="processingLineColor" format="color"></attr>
        <attr name="currNodeNO" format="integer"></attr>   <!-- 当前所到达的节点编号  0开始计算-->
        <attr name="currNodeState" format="integer"></attr>   <!-- 当前所到达的节点状态，0：失败  1：成功 -->
    </declare-styleable>

    <!--仿淘宝头条 向上滚动视图——双行-->
    <declare-styleable name="MarqueeViewUp">
        <attr name="isSetAlphaAnim" format="boolean" /><!--是否显示淡入淡出动画-->
        <attr name="interval" format="integer" /><!--切换间隔时间-->
        <attr name="animDuration" format="integer" /><!--动画时间-->
    </declare-styleable>
    <declare-styleable name="CustomStatusView">
        <attr name="progress_color" format="color" />
        <attr name="progress_width" format="dimension" />
        <attr name="progress_radius" format="dimension" />
        <attr name="load_success_color" format="color" />
        <attr name="load_failure_color" format="color" />
    </declare-styleable>
    <declare-styleable name="StepView">
        <attr name="svCircleColor" format="color" />
        <attr name="svTextColor" format="color" />
        <attr name="svSelectedTextColor" format="color" />
        <attr name="svFillRadius" format="dimension" />
        <attr name="svStrokeWidth" format="dimension" />
        <attr name="svLineWidth" format="dimension" />
        <attr name="svTextSize" format="dimension" />
        <attr name="svDrawablePadding" format="dimension" />
        <attr name="svStepNumColor" format="color" />
        <attr name="svLineColor" format="color" />
    </declare-styleable>
    <declare-styleable name="SegmentControl">
        <attr name="cornerRadius" format="dimension|reference" />
        <attr name="boundColor" format="color|reference" />
        <attr name="selectedBackgroundColor" format="color|reference" />
        <attr name="selectedTextColor" format="color|reference" />
        <attr name="backgroundColor" format="color|reference" />
        <attr name="normalTextColor" format="color|reference" />
        <attr name="texts" format="string|reference" />
        <attr name="android:textSize" />
        <attr name="android:orientation" />
        <!-- 外部边框的width -->
        <attr name="boundWidth" format="dimension|reference" />
        <!-- 内部边框的width -->
        <attr name="separatorWidth" format="dimension|reference" />
        <attr name="gaps" format="dimension|reference" />
        <attr name="horizonGap" format="dimension|reference" />
        <attr name="verticalGap" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="IconDotTextView">
        <attr name="icon" format="reference"/>
        <attr name="icon_size" format="dimension"/>
        <attr name="icon_width" format="dimension"/>
        <attr name="icon_height" format="dimension"/>
        <attr name="spacing" format="dimension"/>
        <attr name="direction" format="enum">
            <enum name="row" value="1"/>
            <enum name="row_reverse" value="2"/>
            <enum name="column" value="4"/>
            <enum name="column_reverse" value="8"/>
        </attr>
        <attr name="text" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="dot_visible" format="boolean"/>
        <attr name="dot_size" format="dimension"/>
        <attr name="dot_color" format="color"/>
        <attr name="dot_text" format="string"/>
        <attr name="dot_textSize" format="dimension"/>
        <attr name="dot_textColor" format="color"/>
        <attr name="dot_alignToIcon" format="boolean"/>
        <attr name="dot_alignTo">
            <flag name="top" value="1"/>
            <flag name="right" value="2"/>
            <flag name="bottom" value="4"/>
            <flag name="left" value="8"/>
        </attr>
        <attr name="dot_marginTop" format="dimension"/>
        <attr name="dot_marginRight" format="dimension"/>
        <attr name="dot_marginBottom" format="dimension"/>
        <attr name="dot_marginLeft" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="MaxHeightView">
        <attr name="mhv_HeightRatio" format="reference|float" />
        <attr name="mhv_HeightDimen" format="reference|dimension" />
    </declare-styleable>
</resources>
